{
    "name": "octoper/statamic-blade-components",
    "description": "Integration for Blade components inside Statamic's Antler template engine",
    "keywords": [
        "octoper",
        "statamic-blade-components"
    ],
    "type": "statamic-addon",
    "authors": [
        {
            "name": "Vaggelis Yfantis",
            "email": "me@octoper.me",
            "homepage": "https://octoper.me",
            "role": "Developer"
        }
    ],
    "require": {
        "statamic/cms": "^3.0@beta"
    },
    "require-dev": {
        "nunomaduro/collision": "^4.2",
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "scripts": {
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Octoper\\BladeComponents\\": "src"
        }
    },
    "extra": {
        "statamic": {
            "name": "Blade Components",
            "description": "Integration for Blade components inside Statamic's Antler template engine"
        },
        "laravel": {
            "providers": [
                "Octoper\\BladeComponents\\ServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
