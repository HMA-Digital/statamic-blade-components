{
    "name": "octoper/statamic-blade-components",
    "description": "Integration for Blade components inside Statamic's Antler template engine",
    "keywords": [
        "octoper",
        "statamic-blade-components"
    ],
    "type": "statamic-addon",
    "authors": [
        {
            "name": "Vaggelis Yfantis",
            "email": "me@octoper.me",
            "homepage": "https://octoper.me",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.3 || ^8.0",
        "illuminate/support": "^8.34",
        "illuminate/view": "^8.34",
        "statamic/cms": "^3.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.18",
        "nunomaduro/collision": "^5.3",
        "orchestra/testbench": "^6.15",
        "pestphp/pest": "^1.0",
        "phpstan/phpstan": "^0.12.82",
        "spatie/ray": "^1.21"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Octoper\\BladeComponents\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Octoper\\BladeComponents\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@php vendor/bin/testbench package:discover --ansi"
        ],
        "lint": "php-cs-fixer fix -v",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
        "test:types": "./vendor/bin/phpstan analyse --ansi --memory-limit=0",
        "test": "./vendor/bin/pestphp"
    },
    "extra": {
        "statamic": {
            "name": "Blade Components",
            "description": "Integration for Blade components inside Statamic's Antler template engine"
        },
        "laravel": {
            "providers": [
                "Octoper\\BladeComponents\\ServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
